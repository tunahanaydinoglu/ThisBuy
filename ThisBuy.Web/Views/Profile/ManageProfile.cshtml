
@{
    ViewBag.Title = "ManageProfile";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model ThisBuy.Web.Models.UserProfileViewModel

<div class="container">
    <h1>Profil Düzenle</h1>
    <hr>
    <br />
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-9 personal-info">
                @using (Html.BeginForm("ManageProfile", "Profile", FormMethod.Post))
                {
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Ad:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(x => x.User.Name, new { @class = "form-control", Required = "required", value = Model.User.Name, type="text"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Soyad:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(x => x.User.Surname, new { @class = "form-control", Required = "required", value = Model.User.Surname, type="text"})
                        </div>
                    </div><div class="form-group">
                        <label class="col-lg-3 control-label">Fotograf Linki:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(x => x.User.Photo, new { @class = "form-control", value = Model.User.Photo, type = "text" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Email:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control", Required = "required", value = Model.User.Email, type="email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Şifre:</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.User.Password, new { @class = "form-control", Required = "required", value = Model.User.Password, type="password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Twitter Kullanıcı Adınız:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(x => x.User.Twitter, new { @class = "form-control", value = Model.User.Twitter,type="text", placeholder = "Ör: twitter.com/kullaniciAdi" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">İnstagram Kullanıcı Adınız:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(x => x.User.Instagram, new { @class = "form-control", value = Model.User.Instagram, type = "text", placeholder = "Ör: instagram.com/kullaniciAdi" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Adres Bilgisi:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(x => x.User.Address, new { @class = "form-control", value = Model.User.Address, type = "text", placeholder = "Adres bilgisi" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Hakkımda</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(x => x.User.About, new { @class = "form-control", value = Model.User.About, type = "text", placeholder = "Biraz kendinizden bahsetmetmek ister misiniz?" })
                        </div>
                    </div>
                    @Html.HiddenFor(x=>x.User.Id)
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <span></span>
                            <button type="reset" class="btn btn-default">Vazgeç</button>
                        </div>
                    </div>
                }
        </div>
        <div class="col-md-2"></div>
    </div>
    <br />
    <hr />
    <br />
</div>
<hr>
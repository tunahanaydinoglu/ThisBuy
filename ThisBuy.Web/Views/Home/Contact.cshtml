@{

    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Bizimle İletişime Geçin</h2>
                <h5>@ViewBag.Ekk</h5>
            </div>
            <div class="col-lg-8">
                <form method="post" class="form-contact contact_form">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control w-100" cols="30" rows="9" placeholder="Mesajınızı buraya girebilirsiniz..." required="required" id="Message"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input type="text" class="form-control valid" placeholder="Adınızı giriniz.." required="required" name="Name" id="Name" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input type="email" class="form-control valid" placeholder="Email giriniz.." required="required" name="Email" id="Email" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input type="text" class="form-control valid" placeholder="Konu belirtiniz.." required="required" name="Subject" id="Subject" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="button button-contactForm boxed-btn" id="Gonder"><strong>Gönder</strong></button>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <p>Süleyman Demirel Üniversitesi</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <p>+905446570064</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <p>tunahanaydinoglu@outlook.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/assets/postContact.js"></script>
@{

    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model ThisBuy.Web.Models.ContactViewModel

<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Bizimle İletişime Geçin</h2>
                <h5>@ViewBag.Ekk</h5>
            </div>
            <div class="col-lg-8">
                    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class= "form-contact contact_form" })) {
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                @Html.TextAreaFor(m=>m.Contact.Message, new { @class="form-control w-100", cols="30", rows="9", placeholder= "Mesajınızı buraya giriniz...", required="required" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Contact.Name, new { @class = "form-control valid", placeholder = "Adınızı giriniz", required = "required", type="text" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Contact.Email, new { @class = "form-control valid", placeholder = "Email adresinizi giriniz", required = "required", type = "email"})
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Contact.Subject, new { @class = "form-control", placeholder = "Konu belirtiniz", required = "required", type = "text" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="button button-contactForm boxed-btn"><strong>Gönder</strong></button>
                    </div>
                    }
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <p>Süleyman Demirel Üniversitesi</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <p>+905446570064</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <p>tunahanaydinoglu@outlook.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>